{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/msa/master/assets/schema_input.json",
    "title": "nf-core/msa pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "family": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Family/sample name must be provided and cannot contain spaces"
            },
            "fasta": {
                "type": "string",
                "pattern": "^\\S+\\.fa$",
                "errorMessage": "fasta file. Must end with .fa"
            },
            "reference": {
                "type": "string"
            }, 
            "structures": {
                "type": "string"
            }
        },
        "required": ["family", "fasta"]
    }
}
